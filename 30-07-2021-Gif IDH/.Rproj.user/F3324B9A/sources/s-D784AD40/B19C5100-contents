library(magick)
library(tidyverse)

# Creamos el gif ----
str_c("03_Resultados/", list.files("03_Resultados/")) %>%
  map(image_read) %>% # Lee rutas de los archivos.
  image_join() %>% # Junta imágenes
  image_animate(fps=2) %>% # Anima las imagenes, con 1 segundo entre imágenes.
  image_write("gif_idh.gif") # Escribe el gif en el directorio.
